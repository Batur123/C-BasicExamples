#include<iostream>
using namespace std;

int main(){
	
	int a,b,x,y;
	cout<<"Birinci sayiyi giriniz -> ";
	cin>>a;
	cout<<"Ikinci sayiyi giriniz -> ";
	cin>>b;
	cout<<"Ucuncu sayiyi giriniz -> ";
	cin>>x;
	cout<<"Dorduncu sayiyi giriniz ->";
	cin>>y;
	
	cout<<"1. sayi ile 3.sayi carpilicak. 2.sayi ile 4.sayi toplanacak. Sonra bu iki cevabin farki alinacaktir."<<endl;
	cout<<"Cevabiniz -> "<<a*x-b+y;

	
	
	return 0;
}
